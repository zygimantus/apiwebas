<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.swapi.models.Film" table="SWAPI_FILM" optimistic-lock="version">
        <id name="episodeId" column="ID" type="integer" access="field"></id>
        <property name="title" column="TITLE" access="field" type="string"></property>        
        <property name="openingCrawl" column="OPENING_CRAWL" access="field" type="text"></property>        
        <property name="director" column="DIRECTOR" access="field" type="string"></property>        
        <property name="producer" column="PRODUCER" access="field" type="string"></property>        
        <property name="release_date" column="RELEASE_DATE" access="field" type="string"></property>        
        <property name="created" column="CREATED" access="field" type="string"></property>        
        <property name="edited" column="EDITED" access="field" type="string"></property>
        <property name="url" column="URL" access="field" type="string"></property>
<!--        <list name="speciesUrls" access="field" table="SWAPI_SPECIES">
            cascade="all" inverse="false" lazy="true">
            TODO user foreign key here
            <key column="episodeId"></key>  
            <index column="type"></index>
            <element column="SPECIES_URL" type="string"/>
        </list>-->
    </class>
    <class name="com.swapi.models.Species" table="SWAPI_SPECIES" optimistic-lock="version">
        <id name="name" column="ID" type="string" access="field"></id>
        <!--<property name="name" column="NAME" access="field" type="string"></property>-->        
<!--        <property name="openingCrawl" column="OPENING_CRAWL" access="field" type="text"></property>        
        <property name="director" column="DIRECTOR" access="field" type="string"></property>        
        <property name="producer" column="PRODUCER" access="field" type="string"></property>        -->
        <property name="language" column="LANGUAGE" access="field" type="string"></property>        
        <property name="created" column="CREATED" access="field" type="string"></property>        
        <property name="edited" column="EDITED" access="field" type="string"></property>
        <property name="url" column="URL" access="field" type="string"></property>
<!--        <list name="speciesUrls" access="field" table="SWAPI_SPECIES">
            cascade="all" inverse="false" lazy="true">
            TODO user foreign key here
            <key column="episodeId"></key>  
            <index column="type"></index>
            <element column="SPECIES_URL" type="string"/>
        </list>-->
    </class>
</hibernate-mapping>
